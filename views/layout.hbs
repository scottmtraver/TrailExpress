  <style type="text/css">
  </style>
</head>

<body>
  <header id="primary-header">
    <nav class="menu">
      <div class="logo-div">
        <a href="/">
          <img src="./images/logoWhite.png" alt="WSTRS Logo">
        </a>
      </div>
      <ul id="menu-list" class="navigation navigation-hidden">
        <li>
          <div id="menu-control" class="menu-icon">
            <img src="./images/map.svg" alt="Map Icon" />
            <span>Menu</span>
          </div>
        </li>
        <li>
          <a href="/Results">Race Schedule</a>
        </li>
        <li>
          <a href="/Gallery" class="promoted-link">Photos!</a>
        </li>
        <li>
          <a href="/Registration">Registration / Race Pass</a>
        </li>
        <li>
          <a href="/Series">Categories & Points</a>
        </li>
        <li>
          <a href="/Results">Results</a>
        </li>
        <li>
          <a href="/Sponsors">Sponsors</a>
        </li>
      </ul>
    </nav>
  </header>
  <section class="main">
    <h2>Wasatch Trail Series</h2>
    {{{body}}}
  </section>

  <footer class="footer">
    <hr/>
    <span>Website by:
      <a target="_blank" href="http://www.highpeaksolutions.com">High Peak Solutions</a>
    </span>
  </footer>
