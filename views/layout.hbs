    ga('create', 'UA-74667794-1', 'auto');
    ga('send', 'pageview');

  </script> {{/if}}
  <script>
    (function () {
      document.getElementById('menu-control').onclick = function () {
        var menuList = document.getElementById('menu-list');
        if (menuList.classList.contains('navigation-hidden')) {
          menuList.classList.remove('navigation-hidden');
          menuList.classList.add('navigation-open');
        } else {
          menuList.classList.add('navigation-hidden');
          menuList.classList.remove('navigation-open');
        }
      };
      document.getElementsByClassName('more-control')[0].onclick = function (event) {
        var more = document.getElementsByClassName('show-less')[0];
        more.classList.remove('show-less');
        event.target.remove();
      };
      document.addEventListener('scroll', function (event) {
        var header = document.getElementById('primary-header');
        if (window.scrollY > 64) {
          header.classList.add('header-scrolled');
        } else {
          header.classList.remove('header-scrolled');
        }
      });
      setInterval(function () {
        var current = document.getElementsByClassName('hero-card showing-card');
        if (current.length) {
          current = current[0];
          if(current.nextElementSibling && current.nextElementSibling.classList.contains('hero-card')) {
            current.classList.remove('showing-card');
            current.nextElementSibling.classList.add('showing-card');
          } else {
            current.classList.remove('showing-card');
            var first = document.getElementsByClassName('hero-card')[0];
            first.classList.add('showing-card');
          }
        }
      }, 5000);
    }())

  </script>
</body>

</html>