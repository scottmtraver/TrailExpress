<div class="row show-for-medium">
  <div class="medium-11 medium-centered columns">
    <div class="owl-carousel hero-flipper">
      {{#each cards}}
      <div class="item">
        <div class="card row">
          <img class="card-background" src="{{image_url}}" alt="Running!" />
          <div class="medium-12 columns">
            <h3>{{{ content }}}</h3>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>
<div class="row show-for-small-only">
  <div class="medium-11 medium-centered columns">
    <div class="owl-carousel hero-flipper-mobile">
      {{#each cards}}
      <div class="hero-flipper-item-mobile">
        <img class="card-background" src="{{ image_url }}" alt="Running!" />
        <div class="medium-12 columns">
          <h3>{{{ content }}}</h3>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>

<div class="row">
  <div class="medium-12 small-12 columns home-main">
    <div class="medium-12 columns">
      <div class="row">
        <div class="medium-5 small-5 columns">
          <div class="readmore-mobile">
            {{{ homepage.content }}}
          </div>
          <a class="readmore-opener show-for-small-only">More</a>
        </div>
        <div class="medium-3 small-6 columns center">
          <img src="/images/logoWhite.png" alt="logo" />
          <a class="home-registration" href="/Registration" class="show-for-small-only">
            <span>Series Registration</span>
          </a>
          <a class="home-races-link" href="#Races">
            <span>All Races</span>
          </a>
          <hr/>
          <a class="social-link" href="https://www.facebook.com/Wasatch-Trail-Run-Series-wwwRunOnTrailscom-247726315344070" target="_blank">
            <i class="fi-social-facebook"></i> Facebook
          </a>
          <a class="social-link" href="mailto:info@runontrails.com" target="_top">
            <i class="fi-mail"></i> Email
          </a>
        </div>
        <div class="medium-3 small-12 columns">
          <div class="flex-video">
            <div id="homepage-iframe"></div>
          </div>
          <div class="row">
            <div class="small-6 columns">
              <input id="page-video" type="hidden" value="{{ homepage.video_id }}" />
              <img src="/images/north-face-red.png" alt="logo" class="home-sponsor-below-video" />
            </div>
            <div class="small-6 columns">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="medium-12 small-12 columns home-main">
    <div class="row home-races">
      <div class="medium-8 small-12 columns">
        <a name="Races"></a>
        <h2>Races</h2>
        <hr/>
        <table class="races-table" href="#Races">
          <thead>
            <tr>
              <th class="show-for-large">Name</th>
              <th>Date</th>
              <th>Time</th>
              <th>Location</th>
              <th></th>
              </th>
          </thead>
          <tbody class="races">
            {{#each races }} {{#if isFuture}}
            <tr class="is-future">
              {{else}}
              <tr>
                {{/if}}
                <td class="show-for-large">{{ name }}</td>
                <td class="date-slash">{{ date }}</td>
                <td>{{ start_time }}</td>
                <td>{{ venue.name }}</td>
                <td>
                  {{#if results_url }}
                  <a href="/race/{{ seodate }}">Results</a> {{else}}
                  <a href="/race/{{ seodate }}">Info</a> {{/if}}
                </td>
              </tr>
              {{/each}}
          </tbody>
        </table>
      </div>
      <div class="medium-3 small-12 columns right-sponsors">
        <h2>Sponsors</h2>
        <hr/> {{#each sponsors }}
        <a href="{{ link_url }}" target="_blank" class="side-sponsor">
          <img class="sponsor-thumbnail" src="{{ image_url }}" />
        </a> {{/each}}
      </div>
    </div>
  </div>
</div>

</div>

{{#if campaign }}
<!-- The Modal -->
<div id="campaign-video-modal" class="modal">
  <!-- Modal content -->
  <div class="modal-content">
    <span class="close">&times;</span>
    <h3>Watch a Message from our sponsors and get extra tickets!</h3>
    <div class="flex-video">
      <div id="homepage-campaign"></div>
    </div>
  </div>
</div>
<div id="campaign-entry-modal" class="modal">
  <input id="campaign-video" type="hidden" value="{{ campaign.video_id }}" />
  <!-- Modal content -->
  <div class="modal-content">
    <span class="close">&times;</span>
    <h4>Enter Your Bib Number and Last Name Below:</h4>
    <p>
      <label>Bib Number</label>
      <input type="text" class="campaign-input" id="bib-input"> 
    </p>
    <p>
      <label>Last Name</label>
      <input type="text" class="campaign-input" id="lname-input"> 
    </p>
    <button id="submit-campaign" class="button">Submit</button>
    <span class="campaign-error">Please Complete The Form</span>
  </div>
</div>
<div id="campaign-success-modal" class="modal">
  <!-- Modal content -->
  <div class="modal-content">
    <span class="close">&times;</span>
    <h4>Thank You For Supporting Our Sponsors!</h4>
  </div>
</div>
{{/if}}