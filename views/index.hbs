<div class="hero-card-list">
  {{#each cards}}
    {{#if @first}}
      <div class="hero-card showing-card">
    {{else}}
      <div class="hero-card">
    {{/if}}
      {{{ content }}}
    </div>
  {{/each}}
</div>
<div class="page-content">
  <div class="page-content-area page-text homepage-text show-less">
    {{{ homepage.content }}}
  </div>
  <div class="more-control">Read More</div>
  <div class="page-content-area page-aside">
    {{{ homepage.video_url }}}
  </div>
  <div class="page-content-area page-aside">
    <div class="social-fb">Facebook</div>
    <div class="social-insta">Instagram</div>
    <div class="social-email">Email</div>
  </div>

</div>
