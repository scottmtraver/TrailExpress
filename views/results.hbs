<div class="page-content">
  <div class="page-content-area race-table">
    <h3>Series Races</h3>
    <table class="races-table">
      <thead>
        <tr>
          <th class="show-for-large">Name</th>
          <th>Date</th>
          <th>Time</th>
          <th>Location</th>
          <th></th>
          </th>
      </thead>
      <tbody class="races">
        {{#each races }} {{#if isFuture}}
        <tr class="is-future">
          {{else}}
          <tr>
            {{/if}}
            <td class="show-for-large">{{ name }}</td>
            <td class="date-slash">{{ seodate }}</td>
            <td>{{ start_time }}</td>
            <td>{{ venue.name }}</td>
            <td>
              {{#if results_url }}
              <a href="/race/{{ seodate }}">Results</a>
              {{else}}
              <a href="/race/{{ seodate }}">Info</a>
              {{/if}}
            </td>
          </tr>
          {{/each}}
      </tbody>
    </table>
    <!-- Both tables adapted by css -->
    <table class="races-table-mobile">
      <tbody class="races">
        {{#each races }} {{#if isFuture}}
        <tr class="is-future">
          {{else}}
          <tr>
            {{/if}}
            <td colspan=4>{{ name }}</td>
          </tr>
          <tr>
            <td class="date-slash">{{ seodate }}</td>
            <td calss="start-time">{{ start_time }}</td>
            <td>{{ venue.name }}</td>
            <td>
              {{#if results_url }}
              <a href="/race/{{ seodate }}">Results</a>
              {{else}}
              <a href="/race/{{ seodate }}">Info</a>
              {{/if}}
            </td>
          </tr>
          {{/each}}
      </tbody>
    </table>
  </div>
</div>
<div class="page-content">
  <div class="page-content-area sponsors">
    {{#each sponsors }}
    <a href="{{ link_url }}" target="_blank" class="side-sponsor">
      <img class="sponsor-thumbnail" src="{{ image_url }}" />
    </a>
    {{/each}}
  </div>
</div>